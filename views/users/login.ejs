<% layout('layouts/boilerplate')%>

<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-10 col-md-8 col-lg-6">
      <h1>Login</h1>

      <form
        class="needs-validation mt-5"
        action="/login"
        method="POST"
        novalidate
      >
        <div class="mb-3">
          <label class="form-label" for="username">Username</label>
          <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            autofocus
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="password">Password</label>
          <input
            class="form-control"
            type="password"
            id="password"
            name="password"
            required
          />
        </div>

        <button class="btn btn-success">Login</button>
      </form>
    </div>
  </div>
</div>
